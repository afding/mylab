{% extends "base.jinja2" %}
{% block title %}iRead{% endblock %}

{% block head %}
    {{ super() }}
    <script src="{{request.static_url('mypyramid:static/js/readfile.js')}}"></script>
    <script src="{{request.static_url('mypyramid:static/js/popup.js')}}"></script>
    <link rel="stylesheet" href="{{request.static_url('mypyramid:static/css/bookstyle.css')}}" />
{% endblock %}

{% block content %}
<div id="leftCol">
    <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
    <input type="file" id="fileinput" class="ui-widget"  style= "width: 100%;"/>
</div>

<div id="filetitle">
<h2>
<output id="filename">{{file.name}}</output>
</h2>
</div>

<div id="rightCol">
<div id="center_div">
<div id="text_div">
{{file.text|safe}}
</div>
</div>
<div id="navibar">
<input type="button" id="navihome" value="<<" class="ui-button">
<input type="button" id="naviup" value="<" class="ui-button" >
<input type="button" id="navigoto" value="Goto" class="ui-button">
<input id="curpage" value="0" style="width:40px;"class="ui-widget ">
/
<input id="totalpage" value="" style="width:40px;" disabled class="ui-widget ">
<input type="button" id="navidown" value=">" class="ui-button">
<input type="button" id="naviend" value=">>" class="ui-button">
</div>

<div id="dialog-form" >
	<form>
	<fieldset>
		<input type="text" name="cs" id="cs" value="" class="text ui-widget-content ui-corner-all">
		<label>To:</label>
		<input type="text" name="en" id="en" value="" class="text ui-widget-content ui-corner-all">
	</fieldset>
	</form>
</div>

{% endblock %}

